@model StructuralDesign.Web.ViewModels.Load.CreateLoadInputModel
@using StructuralDesign.Web.ViewModels.Load

@{
    this.ViewData["Title"] = "Add Loads";
}

<h4>@this.ViewData["Title"]</h4>

<div class="form-group row">
    <div class="col-sm-2">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<LoadType>()" class="form-control">
            <option>Select type ...</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="col-sm-1">
        <label asp-for="AxialForce" class="small">N [kN]</label>
        <input asp-for="AxialForce" class="form-control" />
        <span asp-validation-for="AxialForce" class="text-danger"></span>
    </div>
    <div class="col-sm-1">
        <label asp-for="BendingMomentY" class="small">My [kNm]</label>
        <input asp-for="BendingMomentY" class="form-control" />
        <span asp-validation-for="BendingMomentY" class="text-danger"></span>
    </div>
    <div class="col-sm-1">
        <label asp-for="BendingMomentZ" class="small">Mz [kNm]</label>
        <input asp-for="BendingMomentZ" class="form-control" />
        <span asp-validation-for="BendingMomentZ" class="text-danger"></span>
    </div>
    <div class="col-sm-1">
        <label asp-for="ShearForceY" class="small">Qy [kN]</label>
        <input asp-for="ShearForceY" class="form-control" />
        <span asp-validation-for="ShearForceY" class="text-danger"></span>
    </div>
    <div class="col-sm-1">
        <label asp-for="ShearForceZ" class="small">Qz [kN]</label>
        <input asp-for="ShearForceZ" class="form-control" />
        <span asp-validation-for="ShearForceZ" class="text-danger"></span>
    </div>

</div>
