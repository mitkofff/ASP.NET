@model StructuralDesign.Web.ViewModels.Load.CreateLoadInputModel
@using StructuralDesign.Web.ViewModels.Load

@{
    this.ViewData["Title"] = "Add Loads";
}

<h4>@this.ViewData["Title"]</h4>

<div class="form-group row">
    <div class="col-sm-6">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<LoadType>()" class="form-control">
            <option>Select type ...</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="col-sm-6" id="axialForce">
        <label asp-for="AxialForce" class="small">N [kN]</label>
        <input asp-for="AxialForce"  value="0" class="form-control" value="0" />
        <span asp-validation-for="AxialForce" class="text-danger"></span>
    </div>
</div>
