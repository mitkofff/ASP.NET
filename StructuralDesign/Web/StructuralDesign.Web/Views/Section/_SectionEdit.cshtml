@model StructuralDesign.Web.ViewModels.Section.CreateSectionInputModel
@using StructuralDesign.Web.ViewModels.Section

@{
    this.ViewData["Title"] = "Add Section";
}
<h4>@this.ViewData["Title"]</h4>
<div class="form-group row">
    <div class="col-sm-3">
        <label asp-for="SectionType"></label>
        <select asp-for="SectionType" asp-items="Html.GetEnumSelectList<SectionType>()" class="form-control" id="drpSectionType">
            <option>Select type ...</option>
        </select>

        <span asp-validation-for="SectionType" class="text-danger"></span>
    </div>
    <div class="col-sm-3">
        <label asp-for="SectionName">Name</label>
        <input asp-for="SectionName" class="form-control" value="Name" />
        <span asp-validation-for="SectionName" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-3">
        <label asp-for="Height">Height</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="col-sm-3">
        <label asp-for="Width">Width</label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-3">
        <label asp-for="FlangeThickness">FlangeThickness</label>
        <input asp-for="FlangeThickness" class="form-control" />
        <span asp-validation-for="FlangeThickness" class="text-danger"></span>
    </div>
    <div class="col-sm-3">
        <label asp-for="WebThickness">WebThickness</label>
        <input asp-for="WebThickness" class="form-control" />
        <span asp-validation-for="WebThickness" class="text-danger"></span>
    </div>
</div>
