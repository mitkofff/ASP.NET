@model StructuralDesign.Web.ViewModels.Book.BooksListViewModel

@{
    this.ViewData["Title"] = "Library";
}

<div id="backgroundMask" class="col-8">
    <div class="row">
        <div class="col-10">
            <h3>@this.ViewData["Title"]</h3>
        </div>
        <div class="col-2 float-right">
            <a class="btn btn-primary" asp-action="Upload">Upload</a>
        </div>
    </div>


    @{int number = 1; }

    @foreach (var book in this.Model.Books)
    {
        <div class="row mt-2 list-group-item list-group-item-action">
            <div class="row">
                <div class="col-sm-1">@(number++)</div>
                <div class="col-sm-10" data-toggle="tooltip" data-placement="top" title="@book.DescriptionPartial">@book.NamePartial</div>
                <div class="col-sm-1">
                    <a asp-action="Read" asp-route-id="@book.Id">
                        <i class="fas fa-book-open" data-toggle="tooltip" data-placement="top" title="Read"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>