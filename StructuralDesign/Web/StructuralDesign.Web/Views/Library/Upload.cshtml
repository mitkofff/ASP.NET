@model StructuralDesign.Web.ViewModels.Book.BookCreateInputModel

@{
    this.ViewData["Title"] = "Upload Book";
}

<div id="backgroundMask" class="col-8">
    <h3>@this.ViewData["Title"]</h3>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Document"></label>
            <input class="form-control " asp-for="Document" />
            <span asp-validation-for="Document" class="text-danger"></span>
        </div>
        <div class="col-sm-1">
            <input type="submit" bootstrap-long-button="" />
        </div>
    </form>
</div>
