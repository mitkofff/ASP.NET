@model StructuralDesign.Web.ViewModels.Administration.AdmDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}
<div id="backgroundMask" class="col-8">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Book</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name:
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Description:
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                FilePath:
            </dt>
            <dd class="col-sm-10">
                @Model.FilePath
            </dd>
            <dt class="col-sm-2">
                Owner:
            </dt>
            <dd class="col-sm-10">
                @Model.OwnerName
            </dd>
            <dt class="col-sm-2">
                IsApproved:
            </dt>
            <dd class="col-sm-10">
                @Model.IsApproved
            </dd>
            <dt class="col-sm-2">
                CreatedOn:
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedOn
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>